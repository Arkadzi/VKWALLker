<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginStart="0dp"
    android:layout_marginTop="@dimen/half_list_padding"
    app:cardCornerRadius="2dp"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/list_padding">

            <ImageView
                android:id="@+id/iv_post_avatar"
                android:layout_width="@dimen/post_avatar_size"
                android:layout_height="@dimen/post_avatar_size"
                android:layout_marginRight="@dimen/list_padding" />

            <TextView
                android:id="@+id/tv_author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_post_avatar"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/text_size_main"
                android:textStyle="bold"
                tools:text="asdasdasd" />

            <TextView
                android:id="@+id/tv_post_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_author_name"
                android:layout_below="@id/tv_author_name"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="@dimen/text_size_secondary"
                tools:text="asdasdasd" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerColor" />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/half_list_padding"
            android:paddingLeft="@dimen/list_padding"
            android:paddingRight="@dimen/list_padding"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/text_size_main"
            tools:text="asdasdasd" />

        <TextView
            android:id="@+id/tv_repost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/half_list_padding"
            android:paddingLeft="@dimen/list_padding"
            android:paddingRight="@dimen/list_padding"
            android:text="@string/repost"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_secondary"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_attachments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/half_list_padding"
            android:drawableLeft="@drawable/ic_attachment_white_18dp"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/half_list_padding"
            android:paddingLeft="@dimen/list_padding"
            android:paddingRight="@dimen/list_padding"
            android:textColor="?android:attr/textColorLink"
            android:textSize="@dimen/text_size_secondary"
            tools:text="asdasdasd" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/half_list_padding"
            android:background="@color/dividerColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:padding="@dimen/list_padding">

            <TextView
                android:id="@+id/tv_likes_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/list_padding"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_favorite_white_18dp"
                android:drawablePadding="@dimen/half_list_padding"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="@dimen/text_size_secondary" />


            <TextView
                android:id="@+id/tv_reposts_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_reply_white_18dp"
                android:drawablePadding="@dimen/half_list_padding"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="@dimen/text_size_secondary" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>